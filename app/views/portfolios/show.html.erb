<div class="container portfolio_form">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image, width: '100%' %>
    </div>
    <div class="col-md-5">
      <%= link_to 'Edit', edit_portfolio_path if logged_in?(:site_admin) %>
      <h1><%= @portfolio_item.title %></h1>

      <em><%= @portfolio_item.subtitle %></em>
      
      <p><%= @portfolio_item.body %></p>
      
      <h2>Technologies Used:</h2>
      
      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    
    </div>
  </div>
</div>





